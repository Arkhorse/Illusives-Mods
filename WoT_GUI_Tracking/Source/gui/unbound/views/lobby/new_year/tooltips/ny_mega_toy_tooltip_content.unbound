(def element NyMegaToyTooltipContent() layout=true entrance=true
    (macro NyMegaToyTooltipModel)
    (style
        (width = 335px)
    )
    (image
        (name = 'rank')
        (style
            (position = "absolute")
            (marginLeft = -15px)
            (marginTop = -13px)
        )
        (source = "R.images.gui.maps.icons.new_year.rankBG.rank5()")
    )
    (image
        (name = 'icon')
        (style
            (position = "absolute")
        )
        (source = "R.images.gui.maps.icons.new_year.settings.Mega()")
    )
    (tf
        (name = 'name')
        (class HighTitleTextStyle)
        (style
            (width = 280px)
            (marginLeft = 64px)
        )
        (bind text "name")
    )
    (tf
        (name = 'settingName')
        (class StandardTextStyle)
        (style
            (width = 280px)
            (marginLeft = 64px)
        )
        (text = "R.strings.ny.decorationSlot.tooltip.megaCollection()")
    )
    (element NYToyTooltipIcon
        (scope
            (bind source "icon")
        )
    )
    (tf
        (name = 'description')
        (class MainTextStyle)
        (style
            (width = 265px)
            (marginLeft = 64px)
            (marginTop = 10px)
        )
        (bind text "description")
    )

    (element TooltipSplitter
        (name = 'separator')
        (style
            (paddingTop = 20px)
        )
    )

    (block
        (style
            (paddingTop = 20px)
            (gap = 5px)
        )

        (hblock
            (style
                (gap = 5px)
            )
            (tf
                (name = 'bonusValue')
                (style
                    (width = 64px)
                    (textAlign = "right")
                )
                (class StatsTextStyle)
                (bind text "'+' + bonus * 100 + R.strings.common.common.percent()")
            )
            (tf
                (name = 'bonusName')
                (class MainTextStyle)
                (text = "R.strings.ny.decorationSlot.tooltip.bonus()")
            )
        )

        (hblock
            (style
                (gap = 5px)
            )
            (tf
                (name = 'shardPrice')
                (style
                    (width = 64px)
                    (textAlign = "right")
                )
                (class StatsTextStyle)
                (bind text "shardsPrice")
            )
            (image
                (name = 'iconParts')
                (source = "R.images.gui.maps.icons.new_year.icons.parts_24x24()")
            )
            (tf
                (class MainTextStyle)
                (text = "R.strings.ny.decorationSlot.tooltip.costParts()")
            )
        )
    )
)