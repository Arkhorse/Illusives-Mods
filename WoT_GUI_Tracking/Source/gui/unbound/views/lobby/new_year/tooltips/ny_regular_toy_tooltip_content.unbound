(def constant NY_RANK_BG_PREFIX 'rank')

(def layout NyRegularToyTooltipContent() entrance=true
    (macro NyRegularToyTooltipModel)
    (style
        (width = 335px)
    )
    (image
        (name = 'rank')
        (style
            (position = "absolute")
            (marginLeft = -15px)
            (marginTop = -13px)
        )
        (bind source "R.images.gui.maps.icons.new_year.rankBG[NY_RANK_BG_PREFIX + rankNumber]()" init=false)
    )
    (image
        (name = 'settingBg')
        (style
            (position = "absolute")
        )
        (bind source "R.images.gui.maps.icons.new_year.settings[setting]()" init=false)
    )
    (tf
        (name = 'name')
        (class HighTitleTextStyle)
        (style
            (width = 280px)
            (marginLeft = 64px)
        )
        (bind text "name")
    )
    (tf
        (name = 'settingName')
        (class StandardTextStyle)
        (style
            (width = 280px)
            (marginLeft = 64px)
        )
        (bind text "R.strings.ny.settings[setting]()" init=false)
    )
    (element NYToyTooltipIcon
        (scope
            (bind source "icon")
        )
    )
    (tf
        (name = 'description')
        (class MainTextStyle)
        (style
            (width = 265px)
            (marginLeft = 64px)
            (marginTop = 10px)
        )
        (bind text "description")
    )

    (block
        (name = 'separator')
        (style
            (width = 100%)
            (align = "center")
            (paddingTop = 20px)
        )
        (image
            (source = "R.atlases.components.tool_tip_separator()")
        )
    )

    (block
        (style
            (gap = 5px)
        )

        (hblock
            (name = 'typeBlock')
            (style
                (paddingLeft = 51px)
                (gap = 2px)
            )
            (image
                (style
                    (marginTop = 2px) 
                )
                (bind source "R.images.gui.maps.icons.new_year.album.page20.toyTooltipSetting[type]()" init=false)
            )
            (tf
                (class MainTextStyle)
                (bind text "R.strings.ny.decorationTypes[type]()" init=false)
            )
        )

        (hblock
            (name = 'countBlock')
            (style
                (gap = 7px)
            )
            (bind visible "count > 1")
            (tf
                (style
                    (width = 64px)
                    (textAlign = "right")
                )
                (class StatsTextStyle)
                (bind text "count")
            )
            (tf
                (class MainTextStyle)
                (text = "R.strings.ny.decorationSlot.tooltip.count()")
            )

        )
        (hblock
            (name = 'levelBlock')
            (style
                (gap = 7px)
            )
            (tf
                (style
                    (width = 64px)
                    (textAlign = "right")
                )
                (class StatsTextStyle)
                (bind text "rank")
            )
            (tf
                (class MainTextStyle)
                (text = "R.strings.ny.decorationSlot.tooltip.levelDecoration()")
            )
        )
        (hblock
            (style
                (gap = 5px)
            )
            (tf
                (style
                    (width = 64px)
                    (textAlign = "right")
                )
                (class StatsTextStyle)
                (bind text "atmospherePoint")
            )

            (image
                (name = 'atmospherePoints')
                (source = "R.images.gui.maps.icons.new_year.icons.atm_points_24x24()")
            )
            
            (tf
                (name = 'atmospherePoints')
                (class MainTextStyle)
                (text = "R.strings.ny.decorationSlot.tooltip.atmospherePoints()")
            )
        )
        (hblock
            (style
                (gap = 5px)
            )
            (tf
                (name = 'shardPrice')
                (style
                    (width = 64px)
                    (textAlign = "right")
                )
                (class StatsTextStyle)
                (bind text "shardsPrice")
            )
            (image
                (name = 'iconParts')
                (source = "R.images.gui.maps.icons.new_year.icons.parts_24x24()")
            )
            (tf
                (class MainTextStyle)
                (bind text "count > 1 ? 
                    R.strings.ny.decorationSlot.tooltip.costParts.group() :
                    R.strings.ny.decorationSlot.tooltip.costParts()")
            )
        )
    )
)