(def constant LINK_TEMPLATE '<a href="event:hyperLink">{image}</a>')

(def layout PiggyBankRewardWindowContent() entrance=true
    (macro PiggyBankRewardWindowContentModel)
    (scope
        (var link:str = "TextFormat(LINK_TEMPLATE, {image: R.images.gui.maps.icons.library.button_link.tag(20, 20, -6)})")
        (var descTxt:str = "R.strings.ingame_gui.rewardWindow[eventName].descText()")        
    )
    (macro RewardWindowBase descText="showDescription ? descTxt + ' ' + link : ''" rendererName='PiggyBankRewardRenderer')
)